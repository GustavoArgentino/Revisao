<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Argentino Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        form {
            max-width: 600px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        .footer {
            padding: 2rem;
            background-color: #1d032875;
            color: #fff;
            text-align: center;
            width: 100%;
            bottom: 0;
        }

        .navbar {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-bs-toggle="tab" href="#post">Post</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane container active" id="home">
        <form action="/submit_post" method="post">
            <label for="content">Conte√∫do:</label>
            <textarea id="content" name="mensagens" rows="8" required></textarea>
            <button class="btn btn-outline-secondary" type="submit">Publicar</button>
        </form>
    </div>
    <!-- Listar postagens -->
    <h2>Posts</h2>
    <ul id="postagensList">
        <% Postagens.forEach(postagem => { %>
            <li>
                <strong><%= postagem.mensagens %></strong>
                <a href="/deletePostagens/<%= postagem._id %>">Delete</a>
            </li>
        <% }); %>
    </ul>
</div>

<div class="container-fluid">
    <div class="footer mt-5">
        <p>@Copyright</p>
    </div>
</div>

</body>
</html>
